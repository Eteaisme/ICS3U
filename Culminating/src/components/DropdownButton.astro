---

export type Props = {
    name?: string | null;
}
const {
name
} = Astro.props;
---
    <div class="group relative cursor-pointer py-2">

        <div class="flex items-center justify-between space-x-5 px-4">
            <a class="menu-hover my-2 py-2  font-medium text-white lg:mx-4" >
               {name} 
            </a>
        </div>
        <div
            class="invisible absolute z-50 flex w-full flex-col py-1 px-4 white shadow-xl group-hover:visible">
        </div>
    </div>