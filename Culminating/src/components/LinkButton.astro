---
import { cva } from "class-variance-authority";
import type { VariantProps } from "class-variance-authority";

interface LinkProps {
  href: string;
}

const className = cva("rounded-full font-bold my-auto", {
  variants: {
    intent: {
      primary: " ",
      secondary: "bg-transparent text-neontra-green",
      highlighted: ""
    },
    size: {
      medium: "text-base py-1 px-4",
      large: "text-lg py-2 px-5",
      xl: "text-xl py-2 px-6",
    },
  },
  defaultVariants: {
    intent: "primary",
    size: "medium",
  },
});

export interface Props extends LinkProps, VariantProps<typeof className> {}

const { href, intent, size } = Astro.props;
---

<a class={className({ intent, size })} href={href}><slot /></a>
